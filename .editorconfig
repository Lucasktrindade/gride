# http://editorconfig.org
root = true

# General Files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[**.php]
indent_size = 4
indent_style = space
insert_final_newline = false

[**.{js,json,html,styl,css}]
indent_size = 2
indent_style = space
insert_final_newline = false
